<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="5dp"
    app:cardCornerRadius="10dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ImgRate"
            android:layout_width="35dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="1dp"
            android:src="@drawable/ic_assetstar_film" />

        <TextView
            android:id="@+id/ActorRateV"
            android:layout_width="35dp"
            android:layout_height="45dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="1dp"
            android:fontFamily="@font/righteous_regular"
            android:gravity="center"
            android:text="5.0"
            android:textColor="@color/colorwhite"
            android:textSize="10sp" />

    </RelativeLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/shape_item_dancingv"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:padding="5dp"
            android:src="@drawable/ic_assetoption_vr"></ImageView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/IVUserNameV"
                android:layout_width="90dp"
                android:layout_height="80dp"
                android:padding="5dp"
                android:src="@drawable/impopulardancing">

            </ImageView>


            <LinearLayout
                android:layout_width="180dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/ActorTxtUserNameV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:fontFamily="@font/righteous_regular"
                    android:text="Moustafa Reda abd alaziz"
                    android:textColor="@color/ColorContentName"
                    android:textSize="16sp">

                </TextView>

                <TextView
                    android:id="@+id/ActorTXTOldV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/centurygothic400"
                    android:text="26 years / male"
                    android:textColor="@color/ColorTextFilming"
                    android:textSize="10sp"
                    android:textStyle="bold">

                </TextView>

                <TextView
                    android:id="@+id/ActorTXTAddressV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/centurygothic400"
                    android:text="Riyadh, Ksa"
                    android:textColor="@color/ColorTextFilming"
                    android:textSize="10sp"
                    android:textStyle="bold">

                </TextView>

            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
